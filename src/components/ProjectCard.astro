---
import { Image } from 'astro:assets'

export interface Props {
  image: ImageMetadata
  title: string
  description: string
  website: string
  github: string
}

const { image, title, description, website, github } = Astro.props
---

<article
  class='max-w-sm w-full mx-auto min-h-[18rem] flex flex-col gap-4 rounded-xl bg-zinc-800 md:max-w-4xl md:p-4 md:flex-row md:items-center lg:opacity-0'
>
  <Image
    src={image}
    alt={title}
    width={1920}
    height={1080}
    class='max-w-sm w-full h-full object-cover rounded-t-xl aspect-video md:max-w-md md:rounded-xl md:shadow-md'
  />

  <div class='px-4 pb-4 md:p-0 md:self-center'>
    <div class='mb-4'>
      <h3
        class='mb-2 text-amber-400 text-2xl font-bold leading-snug tracking-normal'
      >
        {title}
      </h3>

      <p
        class='text-base text-zinc-100 font-medium leading-normal text-inherit md:text-lg'
      >
        {description}
      </p>
    </div>

    <div class='mt-4'>
      <a
        href={website}
        target='_blank'
        aria-label='Go to live site'
        class='inline-block mr-3 px-5 py-3 text-red-400 font-semibold bg-transparent border-2 border-red-400 rounded-xl outline-none text-center transition-all duration-200 focus-visible:ring-2 focus-visible:ring-black focus-visible:ring-offset-1 hover:bg-red-400 hover:text-zinc-950'
      >
        Preview
      </a>

      <a
        href={github}
        target='_blank'
        aria-label='Go to code on GitHub'
        class='inline-block px-5 py-3 text-amber-400 font-semibold bg-transparent border-2 border-amber-400 rounded-xl outline-none text-center transition-all duration-200 focus-visible:ring-2 focus-visible:ring-black focus-visible:ring-offset-1 hover:bg-amber-400 hover:text-zinc-950'
      >
        Github
      </a>
    </div>
  </div>
</article>
