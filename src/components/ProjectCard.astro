---
import { Image } from 'astro:assets'

export interface Props {
  index: number
  image: ImageMetadata
  title: string
  description: string
  website: string
  github: string
}

const { index, image, title, description, website, github } = Astro.props
---

<article
  class={`max-w-sm w-full mx-auto min-h-72 flex flex-col gap-4 bg-[#272727] bg-opacity-75 backdrop-blur-lg backdrop-saturate-[180%] rounded-xl border border-[rgba(255,255,255,0.125)] opacity-0 transition-all duration-1000 translate-y-14 md:max-w-4xl md:px-4 md:flex-row md:items-center ${index % 2 === 0 ? 'lg:pl-0' : 'lg:pr-0'}`}
>
  <Image
    src={image}
    alt={title}
    width={1920}
    height={1080}
    class={`max-w-sm w-full h-full object-cover rounded-t-xl aspect-video md:max-w-md md:rounded-xl md:shadow-md lg:max-w-lg ${index % 2 === 0 ? 'lg:rounded-r-none' : 'md:order-2 lg:rounded-l-none'}`}
  />

  <div
    class={`px-4 pb-4 md:p-0 md:self-center ${index % 2 !== 0 && 'md:order-1'}`}
  >
    <div class='mb-4'>
      <h3
        class='mb-2 text-yellow-400 text-2xl font-bold leading-snug tracking-normal'
      >
        {title}
      </h3>

      <p class='font-medium leading-normal text-inherit lg:text-lg'>
        {description}
      </p>
    </div>

    <div class='mt-4'>
      <a
        href={website}
        target='_blank'
        aria-label='Go to live site'
        class='inline-block mr-3 px-5 py-3 font-semibold tracking-wide bg-transparent border-2 border-red-600 rounded-xl outline-none text-center transition-all duration-200 focus-visible:ring-2 focus-visible:ring-black focus-visible:ring-offset-1 hover:bg-red-600'
      >
        Preview
      </a>

      <a
        href={github}
        target='_blank'
        aria-label='Go to code on GitHub'
        class='inline-block px-5 py-3 font-semibold tracking-wide bg-transparent border-2 border-zinc-50 rounded-xl outline-none text-center transition-all duration-200 focus-visible:ring-2 focus-visible:ring-black focus-visible:ring-offset-1 hover:bg-zinc-50 hover:text-zinc-950'
      >
        Github
      </a>
    </div>
  </div>
</article>
