---
const navLinks = [
  { name: 'Home', href: '/#home' },
  { name: 'Sobre m√≠', href: '/#aboutme' },
  { name: 'Proyectos', href: '/#projects' },
  { name: 'Contacto', href: '/#contact' },
]
---

<header class='fixed top-4 right-4 z-50 md:left-0 md:right-0'>
  <nav class='flex flex-col gap-2 md:max-w-4xl md:mx-auto md:items-center'>
    <label
      for='checkboxInput'
      class='p-2 bg-cyan-400 text-black self-end rounded-full peer md:hidden'
    >
      <svg
        width='42px'
        height='42px'
        viewBox='0 0 24 24'
        fill='none'
        stroke='currentColor'
      >
        <g id='style=linear'>
          <g id='menu-hotdog'>
            <path
              id='vector'
              d='M5 6H19'
              stroke='#000000'
              stroke-width='1.5'
              stroke-linecap='round'></path>
            <path
              id='vector_2'
              d='M3 12H21'
              stroke='#000000'
              stroke-width='1.5'
              stroke-linecap='round'></path>
            <path
              id='vector_3'
              d='M5 18H19'
              stroke='#000000'
              stroke-width='1.5'
              stroke-linecap='round'></path>
          </g>
        </g>
      </svg>

      <input
        type='checkbox'
        name='checkbox'
        id='checkboxInput'
        class='hidden'
      />
    </label>

    <div
      class='w-[calc(100svw-2rem)] py-4 hidden bg-[#1b1b1b] border border-zinc-100 rounded-xl peer-has-[input:checked]:block animate-menuIn origin-top-right md:inline-block md:w-fit md:px-6 md:bg-black md:text-zinc-100 md:peer-has-[input:checked]:inline-block md:animate-none md:rounded-full md:border-none'
    >
      <ul
        class='h-full flex flex-col justify-center items-center gap-6 text-2xl font-semibold md:h-fit md:flex-row md:justify-normal md:font-normal md:text-xl'
      >
        {
          navLinks.map(({ name, href }) => (
            <li class='md:hover:text-cyan-400 md:transition-all md:duration-150 md:ease-in'>
              <a href={href} aria-label={`Ir a ${name}`} class='navLinks'>
                {name}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </nav>
</header>

<script>
  const navLinks = document.querySelectorAll('.navLinks')

  function toggleMenu() {
    const checkboxInput = document.getElementById(
      'checkboxInput'
    ) as HTMLInputElement

    checkboxInput.checked = false
  }

  navLinks.forEach((link) => {
    link.addEventListener('click', toggleMenu)
  })
</script>
