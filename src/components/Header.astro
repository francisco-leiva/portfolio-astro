---
const navLinks = [
  { name: 'Home', href: '/#home' },
  { name: 'Sobre m√≠', href: '/#aboutme' },
  { name: 'Proyectos', href: '/#projects' },
  { name: 'Contacto', href: '/#contact' },
]
---

<header
  class='fixed w-screen h-16 has-[input:checked]:h-[19rem] z-50 bg-[#16191F] transition-[height] ease-linear duration-75 sm:h-16 sm:has-[input:checked]:h-16'
>
  <div
    class='max-w-4xl h-full mx-auto px-2 flex flex-col justify-between items-center sm:flex-row lg:px-0'
  >
    <div
      class='w-full h-16 flex flex-row justify-between items-center peer sm:w-fit'
    >
      <a href='/#home' aria-label='Ir a Inicio'>
        <svg width='50px' height='50px' viewBox='0 0 24 24' fill='none'>
          <path
            d='M7 8L3 11.6923L7 16M17 8L21 11.6923L17 16M14 4L10 20'
            stroke='#000000'
            stroke-width='2'
            stroke-linecap='round'
            stroke-linejoin='round'
            class='stroke-red-600'></path>
        </svg>
      </a>

      <label for='menu-checkbox' class='sm:hidden'>
        <svg
          width='42'
          height='42'
          viewBox='0 0 24 24'
          fill='none'
          stroke='currentColor'
          stroke-width='2'
          stroke-linecap='round'
          stroke-linejoin='round'
        >
          <path stroke='none' d='M0 0h24v24H0z' fill='none'></path>
          <path d='M4 6l16 0'></path>
          <path d='M4 12l16 0'></path>
          <path d='M4 18l16 0'></path>
        </svg>
      </label>

      <input
        type='checkbox'
        name='menu-checkbox'
        id='menu-checkbox'
        class='hidden'
      />
    </div>

    <nav
      class='w-full h-0 peer-has-[input:checked]:h-60 overflow-hidden transition-[height] ease-linear duration-75 sm:inline sm:w-fit sm:h-fit sm:peer-has-[input:checked]:h-fit'
    >
      <ul
        class='h-full flex flex-col justify-center items-center gap-6 text-2xl font-semibold uppercase sm:h-fit sm:flex-row sm:justify-normal sm:gap-2.5 sm:text-lg sm:font-normal md:gap-3'
      >
        {
          navLinks.map(({ name, href }) => (
            <li class='md:px-2.5 md:py-2 md:rounded-xl md:hover:bg-zinc-700 md:transition-all md:duration-100 md:ease-linear'>
              <a href={href} aria-label={`Ir a ${name}`}>
                {name}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
  </div>
</header>
